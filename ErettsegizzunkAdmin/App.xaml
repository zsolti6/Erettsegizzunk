<Application 
  x:Class="ErettsegizzunkAdmin.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design Defaults -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- 🎨 Primary Color (Swapped to #440FB5) -->
            <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#440FB5"/>
            <!-- Main Primary -->
            <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#2E087F"/>
            <!-- Darker Shade -->
            <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#6B3FD1"/>
            <!-- Lighter Shade -->

            <!-- 🎨 Secondary Color (Swapped to #320B86) -->
            <SolidColorBrush x:Key="SecondaryHueMidBrush" Color="#320B86"/>
            <!-- Main Secondary -->
            <SolidColorBrush x:Key="SecondaryHueDarkBrush" Color="#21075A"/>
            <!-- Darker Shade -->
            <SolidColorBrush x:Key="SecondaryHueLightBrush" Color="#5333B1"/>
            <!-- Lighter Shade -->

            <!-- ✅ Dynamically Apply to Material Design -->
            <Color x:Key="PrimaryColor">#440FB5</Color>
            <Color x:Key="SecondaryColor">#320B86</Color>

            <!-- If needed, you can also include other clickable controls like Hyperlink -->
            <Style TargetType="Hyperlink">
                <Setter Property="Cursor" Value="Hand" />
            </Style>

            <Style TargetType="CheckBox">
                <Setter Property="Cursor" Value="Hand" />
            </Style>
            <!-- Global Window Icon Style -->
            <Style TargetType="Window">
                <Setter Property="Icon" Value="pack://application:,,,/Images/app.ico" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
