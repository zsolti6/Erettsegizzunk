<Window x:Class="ErettsegizzunkAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ErettsegizzunkAdmin"
        mc:Ignorable="d"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        Title="Érettségizzünk" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Header -->
        <materialDesign:ColorZone Mode="PrimaryDark" Grid.Row="0" Height="60">
            <TextBlock Text="Bejelentkezés" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   FontSize="24" 
                   Foreground="{DynamicResource MaterialDesignPaper}"/>
            <!-- Using Primary color -->
        </materialDesign:ColorZone>

        <!-- Login Form -->
        <Grid Grid.Row="1" Margin="20,40,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Username Field -->
            <StackPanel Grid.Row="0" Margin="0 10">
                <TextBlock Text="Felhasználónév" FontSize="16" Margin="0 0 0 5" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                <!-- Primary color -->
                <TextBox x:Name="nev" materialDesign:HintAssist.Hint="Gépeld ide a felhasználóneved"
                     FontSize="14" Padding="10" Background="{DynamicResource MaterialDesignPaper}" Foreground="{DynamicResource PrimaryHueDarkBrush}"/>
            </StackPanel>

            <!-- Password Field -->
            <StackPanel Grid.Row="1" Margin="0 10">
                <TextBlock Text="Jelszó" FontSize="16" Margin="0 0 0 5" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                <!-- Primary color -->
                <PasswordBox x:Name="jelszo" materialDesign:HintAssist.Hint="Gépeld ide a jelszavad"
                         FontSize="14" Padding="10" Background="{DynamicResource MaterialDesignPaper}" Foreground="{DynamicResource PrimaryHueDarkBrush}"/>
            </StackPanel>

            <!-- Login Button -->
            <Button Grid.Row="3" 
                Content="Bejelentkezés" 
                HorizontalAlignment="Center" 
                Width="150" 
                Style="{DynamicResource MaterialDesignRaisedButton}" 
                Margin="0 10"
                Background="{DynamicResource PrimaryHueMidBrush}" 
                Foreground="{DynamicResource MaterialDesignPaper}" 
                Click="btnLogin_Click"/>
        </Grid>
    </Grid>
</Window>
