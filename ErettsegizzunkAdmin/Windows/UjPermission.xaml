<Window x:Class="ErettsegizzunkAdmin.Windows.UjPermission"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
    TextElement.FontWeight="Medium"
    TextElement.FontSize="14"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal"
    Height="400" Width="400"
    Icon="../Images/app.ico">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <materialDesign:ColorZone Mode="PrimaryDark" Grid.Row="0" Height="60">
            <TextBlock Text="Új engedély felvitele"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="24"
                   Foreground="{DynamicResource MaterialDesignPaper}"/>
        </materialDesign:ColorZone>

        <!-- Form Section -->
        <StackPanel Grid.Row="1" Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center" Width="280">
            <!-- Username Field -->
            <TextBox materialDesign:HintAssist.Hint="Engedély neve"
                 x:Name="tbPermissionName" FontSize="14" Padding="10"/>

            <!-- TextBlock with Material Design Styling -->
            <TextBox materialDesign:HintAssist.Hint="Engedély leírása"
                 x:Name="tbPermissionDescription" FontSize="14" Padding="10" Height="100"/>

            <!-- Material Design Styled ComboBox -->
            <TextBox materialDesign:HintAssist.Hint="Engedély szintje (még nem létező szint)"
                 x:Name="tbPermissionLevel" FontSize="14" Padding="10"/>

        </StackPanel>

        <!-- Buttons Section -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
            <!-- Submit Button -->
            <Button Content="Létrehoz"
                Style="{DynamicResource MaterialDesignRaisedButton}" 
                Width="100"
                Foreground="White"
                Click="btnTantargy_Letrehoz_Click"/>

            <!-- Cancel Button -->
            <Button Content="Mégsem" 
                Style="{DynamicResource MaterialDesignFlatButton}" 
                Width="100"
                Click="Megse_Click"/>
        </StackPanel>
    </Grid>
</Window>
