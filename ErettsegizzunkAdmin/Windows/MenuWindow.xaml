<Window x:Class="ErettsegizzunkAdmin.Windows.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ErettsegizzunkAdmin.Windows"
        mc:Ignorable="d"
        Title="Menü" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem x:Name="feladatKezel" Header="Feladatok" Click="feladatKezelese_Click"/>
            <MenuItem x:Name="feladatokTemaKezel" Header="Feladatok táma" Click="feladatokTemaKezelese_Click"/>
            <MenuItem x:Name="szintKezel" Header="Szint" Click="segedKezelese_Click"/>
            <MenuItem x:Name="tantargyKezel" Header="Tantargy" Click="segedKezelese_Click"/>
            <MenuItem x:Name="temaKezel" Header="Téma" Click="segedKezelese_Click"/>
            <MenuItem x:Name="tipusKezel" Header="Típus" Click="segedKezelese_Click"/>
        </Menu>

        <Label Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="100" Content="Welcome 007!"/>
    </Grid>
</Window>
