<Window x:Class="ErettsegizzunkAdmin.Windows.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ErettsegizzunkAdmin.Windows"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        Title="Érettségizzünk" 
        Width="1200" Height="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        MinHeight="400" MinWidth="600"
        WindowStyle="ThreeDBorderWindow"
        ResizeMode="CanMinimize"
        Loaded="Window_Loaded"
        Icon="../Images/app.ico">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../Images/hatter.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Top Menu Bar -->
        <materialDesign:ColorZone Mode="PrimaryDark" Grid.Row="0" Height="50">
            <DockPanel LastChildFill="True">

                <!-- Menu egyedi panellel -->
                <Menu materialDesign:ColorZoneAssist.Mode="PrimaryDark"
              VerticalAlignment="Center"
              DockPanel.Dock="Left">

                    <!-- Item panel lecserélése -->
                    <Menu.ItemsPanel>
                        <ItemsPanelTemplate>
                            <DockPanel LastChildFill="False"/>
                        </ItemsPanelTemplate>
                    </Menu.ItemsPanel>

                    <!-- Balra igazított menu items -->
                    <MenuItem x:Name="feladatKezel"
                      Header="Feladatok"
                      Click="feladatKezelese_Click"
                      Foreground="{DynamicResource MaterialDesignPaper}"
                      DockPanel.Dock="Left">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="ClipboardTextOutline"
                                             Foreground="{DynamicResource MaterialDesignPaper}"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="adatbazisBackup"
                      Header="Biztonsági mentés"
                      Click="adatbazisBackup_Click"
                      Foreground="{DynamicResource MaterialDesignPaper}"
                      DockPanel.Dock="Left"
                      Visibility="Collapsed"> <!-- Kiszedni mert nem megy -->
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="FormatListText"
                                             Foreground="{DynamicResource MaterialDesignPaper}"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="tantargyKezel"
                      Header="Tantárgy"
                      Click="tantargyKezel_Click"
                      Foreground="{DynamicResource MaterialDesignPaper}"
                      DockPanel.Dock="Left">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="BookOpenOutline"
                                             Foreground="{DynamicResource MaterialDesignPaper}" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="temaKezel"
                      Header="Téma"
                      Click="feladatokTemaKezelese_Click"
                      Foreground="{DynamicResource MaterialDesignPaper}"
                      DockPanel.Dock="Left">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="Palette"
                                             Foreground="{DynamicResource MaterialDesignPaper}" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="felhasznalokKezel"
                      Header="Felhasználók"
                      Click="felhasznalokKezel_Click"
                      Foreground="{DynamicResource MaterialDesignPaper}"
                      DockPanel.Dock="Left">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="Account"
                                             Foreground="{DynamicResource MaterialDesignPaper}" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem x:Name="engedelyekKezel"
                      Header="Engedélyek"
                      Click="engedelyekkezel_Click"
                      Foreground="{DynamicResource MaterialDesignPaper}"
                      DockPanel.Dock="Left">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="ShieldLock"
                                             Foreground="{DynamicResource MaterialDesignPaper}" />
                        </MenuItem.Icon>
                    </MenuItem>

                    <!-- Jobbra igazított kijelentkezési MenuItem -->
                    <MenuItem Header="Logout"
                      Foreground="{DynamicResource MaterialDesignPaper}"
                      Click="Logout_Click"
                      Padding="8"
                      DockPanel.Dock="Right"
                      VerticalContentAlignment="Center">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="Logout"
                                             Foreground="{DynamicResource MaterialDesignPaper}"
                                             Width="20" Height="20" />
                        </MenuItem.Icon>
                    </MenuItem>
                </Menu>
            </DockPanel>
        </materialDesign:ColorZone>


        <!-- Fő Content -->
        <Grid Grid.Row="1" Background="{DynamicResource MaterialDesignPaper}">
            <!-- Felhasználó képe -->
            <Image x:Name="imgUser"
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Top" 
                   Margin="0 20 20 0"
                   Width="200" 
                   Height="200"/>

            <!-- Üdvozlés rész -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                
                <!-- Üdvözlés felirat -->
                <Label x:Name="lbUdvozles"
                   FontSize="50" 
                   FontWeight="Bold" 
                   Foreground="{DynamicResource PrimaryHueMidBrush}" 
                   Content="Welcome 007!"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

    