<Window x:Class="ErettsegizzunkAdmin.Windows.HowToUseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ErettsegizzunkAdmin.Windows"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14" 
        Height="400" Width="650"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        MinHeight="400" MinWidth="650"
        ResizeMode="CanMinimize"
        Title="Segítség"
        Icon="../Images/app.ico">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Width="650">
        <Grid Margin="10" Background="{DynamicResource MaterialDesignPaper}">
            <!-- Top Row for Title with Accent Color -->
            <DockPanel Margin="0,0,0,10" VerticalAlignment="Top" 
                   Background="{DynamicResource MaterialDesignAccent}">
                <!-- Title Text -->
                <TextBlock x:Name="tbTitle" FontSize="28" FontWeight="Bold"
                       VerticalAlignment="Center" Margin="10" HorizontalAlignment="Center"
                       Foreground="Black" />
            </DockPanel>

            <!-- Card-Like Container -->
            <Border Margin="0,50,0,0" 
                CornerRadius="12" 
                Background="{DynamicResource MaterialDesignPaper}"
                Effect="{DynamicResource MaterialDesignElevationShadow}"
                Padding="10">
                <!-- Text Box with Soft Design -->
                <RichTextBox x:Name="MainRichTextBox" Width="580"
                         VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                         FontSize="16" Padding="10"
                         Foreground="{DynamicResource MaterialDesignBody}"
                         Background="{DynamicResource MaterialDesignPaper}" 
                         VerticalScrollBarVisibility="Auto" 
                         IsReadOnly="True"
                         BorderThickness="0">
                </RichTextBox>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>
