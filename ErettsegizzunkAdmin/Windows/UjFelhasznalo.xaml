<Window 
    TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
    Background="{DynamicResource MaterialDesignPaper}"
    TextElement.FontWeight="Medium"
    TextElement.FontSize="14"
    FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
    x:Class="ErettsegizzunkAdmin.Windows.UjFelhasznalo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        Title="Érettségizzünk"
        Height="450" Width="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <materialDesign:ColorZone Mode="PrimaryDark" Grid.Row="0" Height="60">
            <TextBlock Text="Új felhasználó felvitele"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="24"
                       Foreground="White"/>
        </materialDesign:ColorZone>

        <!-- Form Section -->
        <StackPanel Grid.Row="1" Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <!-- Username Field -->
            <TextBox materialDesign:HintAssist.Hint="Felhasználó név"
                     x:Name="tbFelhasznev" FontSize="14" Padding="10"/>

            <!-- Email Field -->
            <TextBox materialDesign:HintAssist.Hint="Email" 
                     materialDesign:TextFieldAssist.PrefixText="✉" 
                     x:Name="tbEmail" FontSize="14" Padding="10"/>

            <!-- Password Field -->
            <PasswordBox materialDesign:HintAssist.Hint="Jelszó" 
                         x:Name="tbJelszo" FontSize="14" Padding="10"/>

            <!-- Confirm Password Field -->
            <PasswordBox materialDesign:HintAssist.Hint="Jelszó megerősítése" 
                         x:Name="tbJelszoMegint" FontSize="14" Padding="10"/>

            <!-- Role Dropdown -->
            <ComboBox materialDesign:HintAssist.Hint="Role"
                      x:Name="cbJogosultsag" SelectedIndex="0" Padding="10">
                <ComboBoxItem Content="Látogató"/>
                <ComboBoxItem Content="Admin"/>
            </ComboBox>
        </StackPanel>

        <!-- Buttons Section -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
            <!-- Submit Button -->
            <Button Content="Létrehoz"
                    Style="{DynamicResource MaterialDesignRaisedButton}" 
                    Width="100"
                    Click="UjFelhasznalo_Click"/>

            <!-- Cancel Button -->
            <Button Content="Mégsem" 
                    Style="{DynamicResource MaterialDesignFlatButton}" 
                    Width="100"
                    Click="Megse_Click"/>
        </StackPanel>
    </Grid>
</Window>
